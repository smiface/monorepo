generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
  todos Todo[]
}

model Todo {
  id       Int      @id @default(autoincrement())
  done     Boolean? @default(false)
  authorId String
  author   User?    @relation(fields: [authorId], references: [id])
}
